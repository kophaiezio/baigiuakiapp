<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".VerifyAccountActivity">

    <ImageView
        android:id="@+id/btn_verify_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        android:padding="8dp"
        app:tint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Thực Tài Khoản"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_verify_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã code được gửi đến email\nabc@gmail.com"
        android:textColor="#757575"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal">

        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_1"/>
        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_2" android:layout_marginStart="8dp"/>
        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_3" android:layout_marginStart="8dp"/>
        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_4" android:layout_marginStart="8dp"/>
        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_5" android:layout_marginStart="8dp" android:visibility="gone"/>
        <EditText style="@style/OtpEditText" android:id="@+id/et_otp_6" android:layout_marginStart="8dp" android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Gửi lại mã code sau 27s"
        android:textColor="@color/colorButtonBlue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Khu vực bàn phím số (Xem ảnh)]"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:textColor="#757575"/>

</LinearLayout>