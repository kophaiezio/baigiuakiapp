<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <View
        android:id="@+id/timeline_dot"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/timeline_dot_drawable"

        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_schedule_item"
        app:layout_constraintBottom_toBottomOf="@+id/card_schedule_item"
        app:layout_constraintVertical_bias="0.1"/>

    <View
        android:id="@+id/timeline_line_above"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#CCCCCC"

        app:layout_constraintStart_toStartOf="@id/timeline_dot"
        app:layout_constraintEnd_toEndOf="@id/timeline_dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/timeline_dot" />

    <View
        android:id="@+id/timeline_line_below"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#CCCCCC"

        app:layout_constraintStart_toStartOf="@id/timeline_dot"
        app:layout_constraintEnd_toEndOf="@id/timeline_dot"
        app:layout_constraintTop_toBottomOf="@id/timeline_dot"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_schedule_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E0F7FA"

        app:layout_constraintStart_toEndOf="@id/timeline_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_schedule_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_schedule_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_schedule_time_start"/>

            <TextView
                android:id="@+id/tv_schedule_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Tên bài tập"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_schedule_time_start"
                app:layout_constraintEnd_toStartOf="@+id/btn_schedule_edit"
                app:layout_constraintTop_toTopOf="@id/tv_schedule_time_start" />

            <TextView
                android:id="@+id/tv_schedule_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nội dung học"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tv_schedule_title"
                app:layout_constraintEnd_toEndOf="@id/tv_schedule_title"
                app:layout_constraintTop_toBottomOf="@id/tv_schedule_title" />

            <ImageView
                android:id="@+id/btn_schedule_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"

                android:padding="4dp"
                android:contentDescription="Xóa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/btn_schedule_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_edit"

                android:padding="4dp"
                android:contentDescription="Sửa"
                app:layout_constraintEnd_toStartOf="@id/btn_schedule_delete"
                app:layout_constraintTop_toTopOf="@id/btn_schedule_delete"
                app:layout_constraintBottom_toBottomOf="@id/btn_schedule_delete"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>