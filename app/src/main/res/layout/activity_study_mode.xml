<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StudyModeActivity">

    <TextView
        android:id="@+id/tv_study_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chế độ học tập"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_task_name_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#757575"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_study_mode_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nghe TOEIC - Listening Practice"/>

    <ProgressBar
        android:id="@+id/progress_bar_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:max="100"
        android:progress="80"
        android:progressDrawable="@drawable/circular_progress_timer"
        android:rotation="-90"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/tv_task_name_study"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_pause_play"/>

    <TextView
        android:id="@+id/tv_timer_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="56sp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/progress_bar_timer"
        app:layout_constraintEnd_toEndOf="@id/progress_bar_timer"
        app:layout_constraintTop_toTopOf="@id/progress_bar_timer"
        app:layout_constraintBottom_toTopOf="@id/tv_timer_label"
        tools:text="45:30"/>

    <TextView
        android:id="@+id/tv_timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="còn lại"
        android:textColor="#757575"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_timer_countdown"
        app:layout_constraintEnd_toEndOf="@id/tv_timer_countdown"
        app:layout_constraintTop_toBottomOf="@id/tv_timer_countdown"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar_timer"/>

    <ImageButton
        android:id="@+id/btn_pause_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_pause"
        android:background="@drawable/button_circle_outline"
        android:scaleType="centerInside"
        android:contentDescription="Tạm dừng/Tiếp tục"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_pause_label"/>

    <TextView
        android:id="@+id/tv_pause_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạm dừng"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        app:layout_constraintStart_toStartOf="@id/btn_pause_play"
        app:layout_constraintEnd_toEndOf="@id/btn_pause_play"
        app:layout_constraintBottom_toTopOf="@id/card_next_task"/>

    <ImageButton
        android:id="@+id/btn_postpone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/button_circle_filled_gray"
        android:scaleType="centerInside"
        android:contentDescription="Dời lịch"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_pause_play"
        app:layout_constraintTop_toTopOf="@id/btn_pause_play"
        app:layout_constraintBottom_toBottomOf="@id/btn_pause_play"/>

    <TextView
        android:id="@+id/tv_postpone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dời lịch"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/btn_postpone"
        app:layout_constraintEnd_toEndOf="@id/btn_postpone"
        app:layout_constraintTop_toBottomOf="@id/btn_postpone"
        app:layout_constraintBottom_toBottomOf="@id/tv_pause_label"/>

    <ImageButton
        android:id="@+id/btn_complete"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_double_arrow_right"
        android:background="@drawable/button_circle_filled_gray"
        android:scaleType="centerInside"
        android:contentDescription="Hoàn thành"
        app:layout_constraintStart_toEndOf="@id/btn_pause_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_pause_play"
        app:layout_constraintBottom_toBottomOf="@id/btn_pause_play"/>

    <TextView
        android:id="@+id/tv_complete_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoàn thành"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/btn_complete"
        app:layout_constraintEnd_toEndOf="@id/btn_complete"
        app:layout_constraintTop_toBottomOf="@id/btn_complete"
        app:layout_constraintBottom_toBottomOf="@id/tv_pause_label"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_next_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Tiếp theo"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_coffee"
                    android:background="@drawable/goal_icon_background"
                    android:padding="6dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/tv_next_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nghỉ ngơi"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_next_task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 phút • 20:45 - 21:00"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>