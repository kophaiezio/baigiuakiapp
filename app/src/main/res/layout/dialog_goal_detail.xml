<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"

    android:padding="24dp">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theo dõi mục tiêu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_bar_chart"

        android:drawablePadding="8dp"
        app:drawableTint="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tv_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiến độ tổng thể"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/progress_bar_total"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:max="100"
            android:progressDrawable="@drawable/horizontal_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_progress_label"
            app:layout_constraintEnd_toStartOf="@id/tv_percentage"

            tools:progress="75"/>

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/progress_bar_total"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_total"
            tools:text="75%"/>

        <TextView
            android:id="@+id/tv_percentage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_percentage"
            app:layout_constraintEnd_toEndOf="@id/tv_percentage"
            app:layout_constraintTop_toBottomOf="@id/tv_percentage"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_progress_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/progress_bar_total"
            app:layout_constraintTop_toBottomOf="@id/progress_bar_total"
            tools:text="225/300 giờ"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_left_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian còn lại"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_time_left_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 ngày"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time_left_label"
            app:layout_constraintBottom_toBottomOf="@id/tv_time_left_label"/>

        <TextView
            android:id="@+id/tv_current_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tốc độ hiện tại"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_time_left_label"/>

        <TextView
            android:id="@+id/tv_current_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8 giờ/ngày"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_current_rate_label"
            app:layout_constraintBottom_toBottomOf="@id/tv_current_rate_label"/>

        <TextView
            android:id="@+id/tv_needed_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cần thiết"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_current_rate_label"/>

        <TextView
            android:id="@+id/tv_needed_rate_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.67 giờ/ngày"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_needed_rate_label"
            app:layout_constraintBottom_toBottomOf="@id/tv_needed_rate_label"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_update_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cập nhật điểm"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="12dp"/>

        <ImageView
            android:id="@+id/iv_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>