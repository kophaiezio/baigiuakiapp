<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F8FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_profile_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_gray"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúc bạn ngày mới vui vẻ"
                android:textColor="#666"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoa Hoang"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>

        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_notifications"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

    <!-- Card tạo mục tiêu -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_card_blue"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo mục tiêu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi sẽ xây dựng lộ trình học và nhắc nhở bạn học hằng ngày"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>


        <Button
            android:id="@+id/btnCreateGoal"
            android:text="Tạo mục tiêu →"
            android:backgroundTint="#00BCD4"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Hai ô nhỏ -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm bạn/hội nhóm"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tham gia cộng đồng hoặc kết bạn học cùng mục tiêu"
                android:textSize="12sp"
                android:textColor="#666"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo nhiệm vụ/bài tập"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo các bài tập để sắp xếp lịch học tối ưu"
                android:textSize="12sp"
                android:textColor="#666"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Mục tiêu phổ biến -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu phổ biến"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="16dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include layout="@layout/item_goal_small"/>
            <include layout="@layout/item_goal_small"/>
            <include layout="@layout/item_goal_small"/>
            <include layout="@layout/item_goal_small"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Lịch học -->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Lịch học"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textColor="#007AFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_white"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❌"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có dữ liệu"
            android:textSize="14sp"
            android:textColor="#888"/>
    </LinearLayout>

    <!-- Thanh điều hướng -->
    <include layout="@layout/layout_bottom_nav"/>

</LinearLayout>
