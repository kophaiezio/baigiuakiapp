<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateTaskActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_schedule_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_rounded_blue"
        android:text="Tạo lịch học →"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_create_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Tạo bài tập mới"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_create_task_title" />

    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_create_task_title"
        app:layout_constraintBottom_toTopOf="@id/btn_create_schedule_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài tập *"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/et_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên bài tập"
                android:inputType="text"
                android:background="@drawable/edittext_rounded_border_blue" android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung bài tập"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_task_content"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Nội dung bài học"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:background="@drawable/edittext_rounded_border_blue" android:padding="12dp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 kí tự"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_alignEnd="@id/et_task_content"
                    android:layout_alignBottom="@id/et_task_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn chót *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/et_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thứ 2 ngày 16.09.2025"
                android:drawableStart="@drawable/ic_schedule"
                android:drawableEnd="@drawable/ic_arrow_down" android:drawablePadding="8dp"
                android:focusable="false"
                android:clickable="true" android:background="@drawable/edittext_rounded_border_blue" android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số giờ học mỗi ngày *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/et_hours_per_day_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="--:--"
                android:drawableStart="@drawable/ic_time"
                android:drawableEnd="@drawable/ic_arrow_down" android:drawablePadding="8dp"
                android:focusable="false"
                android:clickable="true" android:background="@drawable/edittext_rounded_border_blue" android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức độ ưu tiên *"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ToggleButton
                    android:id="@+id/btn_priority_high"
                    android:textOn="Cao"
                    android:textOff="Cao"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_priority_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"/>
                <ToggleButton
                    android:id="@+id/btn_priority_medium"
                    android:textOn="Trung bình"
                    android:textOff="Trung bình"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_priority_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"/>
                <ToggleButton
                    android:id="@+id/btn_priority_low"
                    android:textOn="Thấp"
                    android:textOff="Thấp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_priority_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại mục tiêu"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ToggleButton
                    android:id="@+id/btn_goal_type_toeic"
                    android:textOn="Toeic"
                    android:textOff="Toeic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_goal_type_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <ToggleButton
                    android:id="@+id/btn_goal_type_ielts"
                    android:textOn="Ielts"
                    android:textOff="Ielts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_goal_type_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <ToggleButton
                    android:id="@+id/btn_goal_type_reading"
                    android:textOn="Đọc sách"
                    android:textOff="Đọc sách"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_goal_type_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>
            <ToggleButton
                android:id="@+id/btn_goal_type_exercise"
                android:textOn="Tập thể dục"
                android:textOff="Tập thể dục"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_goal_type_selector"
                android:textColor="@color/button_priority_text_color"
                android:textAllCaps="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tần suất lặp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ToggleButton
                    android:id="@+id/btn_repeat_daily"
                    android:textOn="Hàng ngày"
                    android:textOff="Hàng ngày"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_repeat_daily_selector"
                    android:textColor="@color/button_priority_text_color"
                    android:textAllCaps="false"/>

                <EditText
                    android:id="@+id/et_repeat_days"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Chọn ngày"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/edittext_rounded_border_blue"
                    android:padding="12dp"
                    android:minHeight="?attr/actionBarSize"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>