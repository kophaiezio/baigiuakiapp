        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#4CAF50" /> <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" /> <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>